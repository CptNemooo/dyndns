# Protect files and directories from prying eyes.

<Directory .git>
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    order allow,deny
    deny from all
  </IfModule>
</Directory>

<Directory private>
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    order allow,deny
    deny from all
  </IfModule>
</Directory>